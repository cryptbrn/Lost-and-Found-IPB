<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.CreatePostActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Detail"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Type"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>


            <Spinner
                android:id="@+id/create_post_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/type_post"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Title"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Description"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_post_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Detail"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_post_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Category"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>


            <Spinner
                android:id="@+id/create_post_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:entries="@array/item_category"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"/>

            <TextView
                android:id="@+id/create_post_location_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Last Location"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_post_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Picture"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/create_post_picture_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="@color/grey"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/create_post_picture"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_baseline_image_24"/>


            </androidx.cardview.widget.CardView>





            <Button
                android:id="@+id/create_post_btn_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_darkblue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="80dp"
                android:text="Post"/>



        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/create_post_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackDisabled"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
