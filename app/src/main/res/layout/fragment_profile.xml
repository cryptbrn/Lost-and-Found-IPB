<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:id="@+id/rellay1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_border">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/ic_account_circle"
                        android:id="@+id/profile_iv_user"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="3dp"
                        android:padding="3dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/profile_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7sp"
                    android:text="Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/profile_tv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_tv_name"
                    android:layout_centerHorizontal="true"
                    android:text="mail@mail.com"
                    android:textSize="14sp" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rellay1"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lost"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/profile_lost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/found"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/profile_found"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/white"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linlay1"
                android:orientation="vertical"
                android:background="#E4E4E4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:id="@+id/profile_layout_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_edit_24"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_edit"/>

                            <TextView
                                android:id="@+id/tv_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/edit_profile"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_edit"
                                app:layout_constraintTop_toTopOf="@id/iv_edit"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_edit"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:id="@+id/profile_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_edit_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_lock_24"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_edit_password"/>

                            <TextView
                                android:id="@+id/tv_edit_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="35dp"
                                android:paddingTop="3dp"
                                android:text="@string/change_password"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="@id/iv_edit_password"
                                app:layout_constraintTop_toTopOf="@id/iv_edit_password" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_edit_password"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/profile_layout_deactivate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_deactivation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_delete_24"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_deactivation"/>

                            <TextView
                                android:id="@+id/tv_deactivation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_deactivation"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_deactivation"
                                app:layout_constraintTop_toTopOf="@id/iv_deactivation"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_deactivation"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/profile_layout_found"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_found"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_business_center_24"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_found"/>

                            <TextView
                                android:id="@+id/tv_found"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/myitem_found"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_found"
                                app:layout_constraintTop_toTopOf="@id/iv_found"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_found"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />



                    <LinearLayout
                        android:id="@+id/profile_layout_lost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_lost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_youtube_searched_for_24"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_lost"/>

                            <TextView
                                android:id="@+id/tv_lost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/myitem_lost"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_lost"
                                app:layout_constraintTop_toTopOf="@id/iv_lost"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_lost"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_help"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_help"/>

                            <TextView
                                android:id="@+id/tv_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/help_center"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_help"
                                app:layout_constraintTop_toTopOf="@id/iv_help"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_help"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_terms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_termsc"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_terms"/>

                            <TextView
                                android:id="@+id/tv_terms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/terms_and_condition"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_terms"
                                app:layout_constraintTop_toTopOf="@id/iv_terms"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_terms"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_priv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_privacy"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_priv"/>

                            <TextView
                                android:id="@+id/tv_priv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/privacy_policy"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_priv"
                                app:layout_constraintTop_toTopOf="@id/iv_priv"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_priv"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />


                    <LinearLayout
                        android:id="@+id/aboutapp_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_abb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_info"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_abb"/>

                            <TextView
                                android:id="@+id/tv_abb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about_app"
                                android:textSize="14sp"
                                android:paddingTop="3dp"
                                android:textStyle="bold"
                                android:layout_marginStart="35dp"
                                app:layout_constraintStart_toStartOf="@id/iv_abb"
                                app:layout_constraintTop_toTopOf="@id/iv_abb"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintTop_toTopOf="@id/tv_abb"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />




                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/version_0_0_1_alpha"/>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cons"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="100dp">

                    <Button
                        android:id="@+id/profile_btn_sign_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_out"
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:textColor="#fff"
                        android:background="@drawable/button_rounded_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/cons"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>



        </RelativeLayout>


    </ScrollView>
    <LinearLayout
        android:id="@+id/profile_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackDisabled"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>